<h1>Group Summary <%= @group.name %></h1><br>

<% if @group.users.include?(current_user) %>

  <%= render :partial => 'expenses/summary',
             :locals => { :min => @group.min_expense, :max => @group.max_expense, :average => @group.avg_expense} %>

  <%= render :partial => 'expenses/total', :locals => { :total => @group.total_expenses } %><br>
<br>

  <h4>Group Members:</h4>
  <ul>
    <% @group.users.each do |user|%>
      <li><%= user.username %></li>
    <% end %>
  </ul><br>

  <%= link_to "View Group Expenses", group_expenses_path(@group), class: 'button-1'%>

<% else %>
<h3> To View Summary you need to be a member of this group</h3>
  <%= form_tag(memberships_path) do %>
    <%= hidden_field_tag 'id', @group.id %>
    <%= submit_tag "Join Group", class: 'button-1' %>
  <% end %>

<% end %>
<br>
