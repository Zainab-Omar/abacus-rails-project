<h1><%= @group.name %></h1>
<%= last_updated @group %><br><br>

<% if @expenses.empty? %>
  <p>There are no expenses for this group</p>
<% else %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sort_link "description" %></th>
      <th><%= sort_link "amount" %></th>
      <th><%= sort_link "created_at", "Added On" %></th>
      <th>Category</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <%@expenses.each do |expense|%>
      <tr>
        <td><%= expense.description%></td>
        <td>$<%= ('%.2f' % expense.amount) %></td>
        <td><%= expense.created_at.strftime "%B %e, %Y" %></td>
        <td><%= expense.category_name %></td>
        <td><%= link_to "Edit", edit_group_expense_path(expense.group_id, expense.id) %></td>
        <td><%= link_to "Delete", group_expense_path(expense.group_id, expense.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <%end %>
  </tbody>
</table>
<%end %>

<h3><strong>TOTAL AMOUNT: </strong>$<%= ('%.2f' % total(@expenses))%></h3>

<br>
<%= link_to "Add New Expense", new_group_expense_path(@group)%>
