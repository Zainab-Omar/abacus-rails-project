<h1><%= @group.name %></h1><br>

  <% if @expenses.empty? %>
    <h4>There are no expenses for this group</h4>
  <% else %>

    <% if @group.users.include?(current_user) %>
      <%= render :partial => 'table' %>
      <%= render :partial => 'total', :locals => { :total => @group.total_expenses } %>

      <%= link_to "Add New Expense", new_group_expense_path(@group), class: 'button-1'%>
      
    <% else %>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th><%= sort_link "description" %></th>
          <th><%= sort_link "category_id", "Category" %></th>
        </tr>
      </thead>
      <tbody>
        <%@expenses.each do |expense|%>
          <tr>
            <td><%= expense.description%></td>
            <td><%= expense.category_name %></td>
          </tr>
        <%end %>
      </tbody>
    </table>

    <%end %>
  <%end %><br>

  <%= link_to "Group Summary", group_path(@group), class: 'button-1'%>
