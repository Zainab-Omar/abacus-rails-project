<div class= "wrapper">
  <% if @group.users.first == current_user%>
    <h1><%= @group.name %></h1><br>
  <% else %>
    <h1><%= @group.name %></h1><br>
  <%end%>

  <div class="expense-form">
    <%= render 'form' %>
  </div>

  <% if @expenses.empty? %>
    <h4>There are no expenses for this group</h4><br>

    <%= link_to "Add New Expense", new_group_expense_path(@group), class: 'button-1', id: 'add-expense-form' %>
  <% else %>

    <% if @group.users.include?(current_user) %>
      <div class="new-added-expense">
      </div>
      <%= render :partial => 'table' %>
      <!-- <h3 class="wrapper"><strong>TOTAL AMOUNT: </strong><%= number_to_currency(@group.total_expenses)%></h3> -->

      <!-- <%= link_to "Add New Expense", new_group_expense_path(@group), class: 'button-1', id: 'add-expense-form' %> -->

    <% else %>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th><%= sort_link "description" %></th>
          <th><%= sort_link "category_id", "Category" %></th>
        </tr>
      </thead>
      <tbody>
          <%@expenses.each do |expense|%>
            <tr>
              <td><%= expense.description%></td>
              <td><%= expense.category_name %></td>
            </tr>
          <%end %>
      </tbody>
    </table>

    <%end %>
  <%end %><br>

    <%= link_to "Group Summary", group_path(@group), class: 'button-1', id: 'group-summary' %>

<!--Hook: a container to inject the data/response-->
  <div class= "summary" >
  </div>
</div>
